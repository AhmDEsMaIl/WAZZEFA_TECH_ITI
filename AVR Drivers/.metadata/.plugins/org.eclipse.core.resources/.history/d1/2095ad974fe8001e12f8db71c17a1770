/****************************LIB***************************/
#include "LIB/BIT_MATH.h"
#include "LIB/STD_Types.h"

/****************************MCAL**************************/
#include "MCAL/DIO/DIO_Interface.h"
/****************************HAL**************************/

#include"HAL/KEYPAD/KEYPAD_Interface.h"
#include"HAL/LCD/LCD_Interface.h"
#include "HAL/DCMOTOR/DCMOTOR_Interface.h"


/*Inclusions*/
#include "avr/delay.h"



int main (void)
{
	/***********************MODULES INIT*************************/
	MOTOR_voidINIT();
	LCD_voidInit();
	KEYPAD_Init();
	u8 Local=0;
	u16 Numb,Result=0;
	u8 f=0,c=0;
	while(1)
	{

		Local=KEYPAD_u8GetPressed();
		if(Local!=NOTPRESSED)
		{
			if(Local>='0' && Local<='9')
			{
				if(c==1)
				{
					LCD_voidClearScreen();
					c=0;
				}
				Numb=Numb*10+(Local-'0');
				//LCD_voidSendData(Local);
			}
			else
			{
				switch(Local)
				{
				case '+':
					Result=Numb;
					Numb=0;
					f=1;
					LCD_voidSendData(Local);
					break;
				case '-':
					Result=Numb;
					Numb=0;
					f=2;
					LCD_voidSendData(Local);
					break;
				case '*':
					Result=Numb;
					Numb=0;
					f=3;
					LCD_voidSendData(Local);
					break;
				case '/':
					Result+=Numb;
					Numb=0;
					f=4;
					LCD_voidSendData(Local);
					break;
				case '=':
					switch(f)
					{
					case 1:
						Result=Result +Numb;
						break;
					case 2:
						Result=Result -Numb;
						break;
					case 3:
						Result=Result *Numb;
						break;
					case 4:
						Result=Result /Numb;
						break;
					}
					LCD_voidSendData(Local);
					LCD_voidSendNumber(Result);
					f=0;
					c=1;
					break;

				}
			}

			Local=NOTPRESSED;
		}


	}
	return 0;
}

